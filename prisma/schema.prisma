// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  image         String?
  password      String?
  emailVerified DateTime?
  timezone      String        @default("Asia/Kolkata")
  bio           String?
  accounts      Account[]
  sessions      Session[]
  books         Book[]
  readingLogs   ReadingLog[]
  readingGoals  ReadingGoal[]
  friendships   Friendship[]  @relation("UserFriendships")
  friends       Friendship[]  @relation("UserFriends")
  challenges    Challenge[]   @relation("ChallengeCreator")
  challengeParticipants ChallengeParticipant[]
  readingSessions ReadingSession[]
  reminders     Reminder[]
  createdGroups Group[]       @relation("GroupCreator")
  groupMembers  GroupMember[]
  groupMessages GroupMessage[]
  messageReactions GroupMessageReaction[]
  readingSpeedTests ReadingSpeedTest[]
  quotes        Quote[]
  achievements  Achievement[]
  ratings       Rating[]
  chapterNotes  ChapterNote[]
  bookReads     BookRead[]
  readingJournals ReadingJournal[]
  vocabularies  Vocabulary[]
  bookLoans     BookLoan[]
  bookMemories  BookMemory[]
  dashboardPreferences DashboardPreference?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model ReadingGoal {
  id          String   @id @default(cuid())
  userId      String
  type        String
  target      Int
  period      String
  startDate   DateTime
  endDate     DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([type, period])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id          String       @id @default(cuid())
  userId      String
  title       String
  author      String
  totalPages  Int
  currentPage Int          @default(0)
  initialPages Int         @default(0)
  status      String       @default("reading")
  priority    Int?         // Priority for TBR shelf (lower = higher priority)
  completedAt DateTime?
  // Series tracking
  seriesName  String?
  seriesNumber Int?        // Book number in series (e.g., 1, 2, 3)
  // DNF tracking
  dnfReason   String?      // Reason for Did Not Finish
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  readingLogs ReadingLog[]
  readingSessions ReadingSession[]
  quotes      Quote[]
  achievements Achievement[]
  ratings     Rating[]
  chapterNotes ChapterNote[]
  bookReads   BookRead[]
  readingJournals ReadingJournal[]
  vocabularies Vocabulary[]
  bookLoans   BookLoan[]
  bookMemories BookMemory[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([status])
  @@index([userId, status, priority])
  @@index([userId, seriesName])
}

model ReadingLog {
  id         String   @id @default(cuid())
  userId     String
  bookId     String
  pagesRead  Int
  date       DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, bookId, date])
  @@index([userId])
  @@index([bookId])
  @@index([date])
  @@index([userId, date])
  @@index([userId, pagesRead])
  @@index([date, userId])
}

model Friendship {
  id          String   @id @default(cuid())
  userId      String
  friendId    String
  status      String   @default("pending") // pending, accepted, blocked
  user        User     @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  friend      User     @relation("UserFriends", fields: [friendId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
  @@index([status])
}

model Challenge {
  id          String   @id @default(cuid())
  creatorId   String
  title       String
  description String?
  type        String   // "yearly", "genre", "pages", "books"
  target      Int
  startDate   DateTime
  endDate     DateTime
  isPublic    Boolean  @default(true)
  creator     User     @relation("ChallengeCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  participants ChallengeParticipant[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([creatorId])
  @@index([type])
  @@index([startDate, endDate])
}

model ChallengeParticipant {
  id          String   @id @default(cuid())
  challengeId String
  userId      String
  progress    Int      @default(0)
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([challengeId, userId])
  @@index([challengeId])
  @@index([userId])
}

model ReadingSession {
  id          String   @id @default(cuid())
  userId      String
  bookId      String?
  startTime   DateTime
  endTime     DateTime?
  pagesRead   Int      @default(0)
  duration    Int?     // Duration in seconds
  location    String?  // Where the reading session took place
  latitude    Float?   // Location latitude for map
  longitude   Float?   // Location longitude for map
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([startTime])
  @@index([latitude, longitude])
}

model Reminder {
  id          String   @id @default(cuid())
  userId      String
  title       String
  message     String?
  time        String   // Time in HH:MM format
  days        String   // Comma-separated days: "mon,tue,wed,thu,fri,sat,sun" or "daily"
  isActive    Boolean  @default(true)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  isPublic    Boolean  @default(true)
  creatorId   String
  topic       String?  // Optional topic/category
  image       String?  // Group image/avatar
  creator     User     @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  messages    GroupMessage[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([creatorId])
  @@index([isPublic])
  @@index([topic])
}

model GroupMember {
  id          String   @id @default(cuid())
  groupId     String
  userId      String
  role        String   @default("member") // member, moderator, admin
  joinedAt    DateTime @default(now())
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt   DateTime @updatedAt

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
  @@index([role])
}

model GroupMessage {
  id          String   @id @default(cuid())
  groupId     String
  userId      String
  content     String
  replyToId   String?  // For replies to other messages
  replyTo     GroupMessage? @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies     GroupMessage[] @relation("MessageReplies")
  editedAt    DateTime?
  attachments GroupMessageAttachment[]
  reactions   GroupMessageReaction[]
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([groupId])
  @@index([userId])
  @@index([createdAt])
  @@index([replyToId])
}

model GroupMessageAttachment {
  id          String   @id @default(cuid())
  messageId   String
  type        String   // image, file, etc.
  url         String
  filename    String?
  size        Int?     // Size in bytes
  message     GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@index([messageId])
}

model GroupMessageReaction {
  id          String   @id @default(cuid())
  messageId   String
  userId      String
  emoji       String   // Emoji or reaction type
  message     GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([messageId, userId, emoji])
  @@index([messageId])
  @@index([userId])
}

model ReadingSpeedTest {
  id            String   @id @default(cuid())
  userId        String
  wordsPerMinute Int
  wordsRead     Int
  duration      Int      // Duration in seconds
  testDate      DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([testDate])
}

model Quote {
  id          String   @id @default(cuid())
  userId      String
  bookId      String?
  quoteText   String
  pageNumber  Int?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "streak", "books", "pages", etc.
  milestone   Int      // 10, 25, 50, 100, etc.
  bookId      String?
  achievedAt  DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())

  @@unique([userId, type, milestone])
  @@index([userId])
  @@index([type])
}

// Multi-dimensional ratings
model Rating {
  id            String   @id @default(cuid())
  userId        String
  bookId        String
  overallRating Int?      // Overall rating (1-5)
  plotRating    Int?      // Plot rating (1-5)
  characterRating Int?    // Character rating (1-5)
  writingRating Int?      // Writing style rating (1-5)
  pacingRating  Int?      // Pacing rating (1-5)
  review         String?   // Written review
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book           Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, bookId])
  @@index([userId])
  @@index([bookId])
}

// Chapter notes and annotations
model ChapterNote {
  id          String   @id @default(cuid())
  userId      String
  bookId      String
  chapterNumber Int?
  chapterTitle String?
  note        String
  pageNumber  Int?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([bookId, chapterNumber])
}

// Re-read tracking
model BookRead {
  id          String   @id @default(cuid())
  userId      String
  bookId      String
  readNumber  Int      // 1st read, 2nd read, etc.
  startedAt   DateTime
  completedAt DateTime?
  rating      Int?     // Rating for this specific read
  notes       String?  // Notes about this read
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([userId, bookId, readNumber])
}

// Reading journal entries
model ReadingJournal {
  id          String   @id @default(cuid())
  userId      String
  bookId      String?
  entry       String   // Journal entry text
  mood        String?  // Reading mood (excited, relaxed, etc.)
  date        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([userId, date])
}

// Vocabulary list
model Vocabulary {
  id          String   @id @default(cuid())
  userId      String
  bookId      String?
  word        String
  definition  String?
  pageNumber  Int?
  context     String?  // Sentence where word was found
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([userId, word])
}

// Book lending tracker
model BookLoan {
  id          String   @id @default(cuid())
  userId      String
  bookId      String
  borrowerName String  // Name of person who borrowed
  borrowerEmail String? // Email if available
  loanedAt    DateTime @default(now())
  returnedAt  DateTime?
  notes       String?  // Notes about the loan
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([userId, returnedAt])
}

// Reading Timeline - Associate books with places, times, and life events
model BookMemory {
  id          String   @id @default(cuid())
  userId      String
  bookId      String
  location    String?  // Where you read this book (e.g., "Coffee shop downtown", "Home library")
  latitude    Float?   // Location latitude for map visualization
  longitude   Float?   // Location longitude for map visualization
  memoryNote  String?  // Life event or memory associated with reading this book
  lifeEvent   String?  // Type of life event (e.g., "vacation", "graduation", "moving")
  memoryDate  DateTime? // When this memory/association was created (when you read it)
  photoUrl    String?  // Optional photo URL for the memory
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([userId, bookId])
  @@index([latitude, longitude])
  @@index([memoryDate])
}

// Dashboard widget preferences
model DashboardPreference {
  id          String   @id @default(cuid())
  userId      String   @unique
  layoutJson  String   // JSON array of widget preferences: [{id, visible, order, size}]
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
