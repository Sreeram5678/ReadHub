// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  image         String?
  password      String?
  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]
  books         Book[]
  readingLogs   ReadingLog[]
  readingGoals  ReadingGoal[]
  friendships   Friendship[]  @relation("UserFriendships")
  friends       Friendship[]  @relation("UserFriends")
  challenges    Challenge[]   @relation("ChallengeCreator")
  challengeParticipants ChallengeParticipant[]
  readingSessions ReadingSession[]
  reminders     Reminder[]
  createdGroups Group[]       @relation("GroupCreator")
  groupMembers  GroupMember[]
  groupMessages GroupMessage[]
  messageReactions GroupMessageReaction[]
  readingSpeedTests ReadingSpeedTest[]
  quotes        Quote[]
  achievements  Achievement[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model ReadingGoal {
  id          String   @id @default(cuid())
  userId      String
  type        String
  target      Int
  period      String
  startDate   DateTime
  endDate     DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([type, period])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id          String       @id @default(cuid())
  userId      String
  title       String
  author      String
  totalPages  Int
  currentPage Int          @default(0)
  initialPages Int         @default(0)
  status      String       @default("reading")
  completedAt DateTime?
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  readingLogs ReadingLog[]
  readingSessions ReadingSession[]
  quotes      Quote[]
  achievements Achievement[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([status])
}

model ReadingLog {
  id         String   @id @default(cuid())
  userId     String
  bookId     String
  pagesRead  Int
  date       DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, bookId, date])
  @@index([userId])
  @@index([bookId])
  @@index([date])
  @@index([userId, date])
}

model Friendship {
  id          String   @id @default(cuid())
  userId      String
  friendId    String
  status      String   @default("pending") // pending, accepted, blocked
  user        User     @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  friend      User     @relation("UserFriends", fields: [friendId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
  @@index([status])
}

model Challenge {
  id          String   @id @default(cuid())
  creatorId   String
  title       String
  description String?
  type        String   // "yearly", "genre", "pages", "books"
  target      Int
  startDate   DateTime
  endDate     DateTime
  isPublic    Boolean  @default(true)
  creator     User     @relation("ChallengeCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  participants ChallengeParticipant[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([creatorId])
  @@index([type])
  @@index([startDate, endDate])
}

model ChallengeParticipant {
  id          String   @id @default(cuid())
  challengeId String
  userId      String
  progress    Int      @default(0)
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([challengeId, userId])
  @@index([challengeId])
  @@index([userId])
}

model ReadingSession {
  id          String   @id @default(cuid())
  userId      String
  bookId      String?
  startTime   DateTime
  endTime     DateTime?
  pagesRead   Int      @default(0)
  duration    Int?     // Duration in seconds
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([startTime])
}

model Reminder {
  id          String   @id @default(cuid())
  userId      String
  title       String
  message     String?
  time        String   // Time in HH:MM format
  days        String   // Comma-separated days: "mon,tue,wed,thu,fri,sat,sun" or "daily"
  isActive    Boolean  @default(true)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  isPublic    Boolean  @default(true)
  creatorId   String
  topic       String?  // Optional topic/category
  image       String?  // Group image/avatar
  creator     User     @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  messages    GroupMessage[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([creatorId])
  @@index([isPublic])
  @@index([topic])
}

model GroupMember {
  id          String   @id @default(cuid())
  groupId     String
  userId      String
  role        String   @default("member") // member, moderator, admin
  joinedAt    DateTime @default(now())
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt   DateTime @updatedAt

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
  @@index([role])
}

model GroupMessage {
  id          String   @id @default(cuid())
  groupId     String
  userId      String
  content     String
  replyToId   String?  // For replies to other messages
  replyTo     GroupMessage? @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies     GroupMessage[] @relation("MessageReplies")
  editedAt    DateTime?
  attachments GroupMessageAttachment[]
  reactions   GroupMessageReaction[]
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([groupId])
  @@index([userId])
  @@index([createdAt])
  @@index([replyToId])
}

model GroupMessageAttachment {
  id          String   @id @default(cuid())
  messageId   String
  type        String   // image, file, etc.
  url         String
  filename    String?
  size        Int?     // Size in bytes
  message     GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@index([messageId])
}

model GroupMessageReaction {
  id          String   @id @default(cuid())
  messageId   String
  userId      String
  emoji       String   // Emoji or reaction type
  message     GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([messageId, userId, emoji])
  @@index([messageId])
  @@index([userId])
}

model ReadingSpeedTest {
  id            String   @id @default(cuid())
  userId        String
  wordsPerMinute Int
  wordsRead     Int
  duration      Int      // Duration in seconds
  testDate      DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([testDate])
}

model Quote {
  id          String   @id @default(cuid())
  userId      String
  bookId      String?
  quoteText   String
  pageNumber  Int?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "streak", "books", "pages", etc.
  milestone   Int      // 10, 25, 50, 100, etc.
  bookId      String?
  achievedAt  DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?    @relation(fields: [bookId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())

  @@unique([userId, type, milestone])
  @@index([userId])
  @@index([type])
}
